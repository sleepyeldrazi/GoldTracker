<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip">


    <!-- Title Of Song-->
    <TextView
        android:layout_marginLeft="20dp"
        android:id="@+id/reasonOfExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/sumOfExpense"
        android:text="Example"
        android:textColor="#040404"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- Artist Name -->
    <TextView
        android:layout_marginLeft="25dp"
        android:id="@+id/dateOfExpense"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reasonOfExpense"
        android:layout_marginTop="1dip"
        android:layout_toStartOf="@+id/sumOfExpense"
        android:text="07.01.1998"
        android:textColor="#343434"
        android:textSize="14sp" />

    <!-- Rightend Duration -->
    <TextView
        android:id="@+id/sumOfExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dip"
        android:gravity="right"
        android:text="5:45"
        android:textColor="#10bcc9"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/dateOfExpense" />

    <!-- Rightend Arrow -->

</RelativeLayout>